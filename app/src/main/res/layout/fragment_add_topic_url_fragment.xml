<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_topic_url_fragment_principal_container"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_topic_url_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/dimen_4"
        android:theme="@style/WhiteOverflowIcon"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <include layout="@layout/default_toolbar" />

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:orientation="vertical"
        android:gravity="center">
        <!-- actual -->
        <LinearLayout
            android:id="@+id/add_topic_url_linear_layout_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_topic_url_current_url_text"/>
            <TextView
                android:id="@+id/add_topic_url_fragment_current_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>

        <!-- api key -->
        <LinearLayout
            android:id="@+id/add_topic_url_linear_layout_horizontal_api_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_topic_url_api_key_text"/>
            <EditText
                android:id="@+id/add_topic_url_fragment_api_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/add_topic_url_api_key_hint" />
        </LinearLayout>

        <!-- NEW -->
        <LinearLayout
            android:id="@+id/add_topic_url_fragment_linear_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_topic_url_current_url_text_url"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/add_topic_url_fragment_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="@string/add_topic_url_current_url_hint"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/dimen_10"
                android:id="@+id/add_topic_url_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn"
                android:text="@string/add_topic_url_current_url_save_new_url_btn"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>